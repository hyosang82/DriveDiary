<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <RelativeLayout
        android:id="@+id/map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        >
            <Button
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="설정"
            />
            
            <CheckBox
                android:id="@+id/chk_track_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="맵 자동 이동"
            />
        </LinearLayout>
           
        <Button
            android:id="@+id/btn_hideinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hide_info"
        />
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	        >
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:text="@string/latitude"
	            />
	            <EditText
	                android:id="@+id/txtLatitude"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:editable="false"
	            />
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:text="@string/longitude"
	            />
	            <EditText
	                android:id="@+id/txtLongitude"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:editable="false"
	            />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	        >
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:text="@string/speed"
	            />
	            <EditText
	                android:id="@+id/txtSpeed"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="right"
	                android:editable="false"
	            />
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:layout_marginRight="10dp"
	                android:textColor="#CCCCCC"
	                android:text="km/h"
	            />            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:text="@string/altitude"
	            />
	            <EditText
	                android:id="@+id/txtAltitude"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="right"
	                android:editable="false"
	            />
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:layout_marginRight="10dp"
	                android:textColor="#CCCCCC"
	                android:text="m"
	            />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	        >
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:text="@string/accuracy"
	            />
	            <EditText
	                android:id="@+id/txtAccuracy"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="right"
	                android:editable="false"
	            />
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:text="@string/bearing"
	            />
	            <EditText
	                android:id="@+id/txtBearing"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:editable="false"
	            />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	        >
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:text="@string/gps_time"
	            />
	            <EditText
	                android:id="@+id/txtTimestamp"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:editable="false"
	            />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	        >
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:text="Provider"
	            />
	            <EditText
	                android:id="@+id/txtProvider"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:editable="false"
	            />
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0"
	                android:text="@string/record_count"
	            />
	            <EditText
	                android:id="@+id/txtRecCount"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:editable="false"
	            />
	        </LinearLayout>
	    </LinearLayout>
        <Button
            android:id="@+id/btn_addfuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_fuel"
        />
        <LinearLayout
            android:id="@+id/ll_notlogging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        >
    	    <Button
    	        android:id="@+id/btn_startlog"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:textColor="#00aa00"
    	        android:text="@string/start_log"
    	    />
    	</LinearLayout>
        <LinearLayout
            android:id="@+id/ll_logging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        >
            <Button
                android:id="@+id/btn_stoplog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#aa0000"
                android:text="@string/stop_log"
            />
            <Button
                android:id="@+id/btn_stopservice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#aa0000"
                android:text="@string/stop_service"
            />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
